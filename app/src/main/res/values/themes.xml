<resources>
    <!-- Base application theme. -->
    <style name="Theme.IndiaPoliticalEdge" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_gradient_start</item>
        <item name="colorPrimaryVariant">@color/bg_gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="itemBackground">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="partyTextColor">@color/bg_gradient_start</item>
        <item name="partyBgColor">@color/bg_gradient_start</item>
        <item name="bg_background">@drawable/bg_semi_curved</item>
    </style>

