<resources>
    <!-- Base application theme. -->
    <style name="Theme.IndiaPoliticalEdge" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_gradient_start</item>
        <item name="colorPrimaryVariant">@color/bg_gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="itemBackground">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="partyTextColor">@color/partyText</item>
        <item name="partyBgColor">@color/partyBg</item>
    </style>

    <style name="Theme.IndiaPoliticalEdge.Mint" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_gradient_start</item>
        <item name="colorPrimaryVariant">@color/bg_gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="itemBackground">@color/white</item>
        <!-- Customize your theme here. -->
        <!-- Buttons Color -->
        <item name="partyTextColor">@color/orangeTeal</item>
        <item name="partyBgColor">@color/orangeTeal</item>
    </style>

    <style name="Theme.IndiaPoliticalEdge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IndiaPoliticalEdge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>