<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:id="@+id/raise_issues_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/raise_issues_card_img"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/raise_your_hand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/raise_your_issue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_semi_curved_grey"
                android:hint="@string/pls_raise_your_issue"
                android:paddingStart="@dimen/_6sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/greyTeal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/raise_issues_card_img" />

            <EditText
                android:id="@+id/mandal_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_semi_curved_grey"
                android:hint="@string/enter_mandal_name"
                android:inputType="none"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/greyTeal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/raise_your_issue" />

            <EditText
                android:id="@+id/village_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_semi_curved_grey"
                android:hint="@string/enter_village_name"
                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/greyTeal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mandal_name" />

            <EditText
                android:id="@+id/sarpanch_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_semi_curved_grey"
                android:hint="@string/enter_sarpanch_name"
                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/greyTeal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/village_name" />

            <EditText
                android:id="@+id/sarpanch_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_semi_curved_grey"
                android:hint="@string/enter_sarpanch_mobile"
                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/greyTeal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sarpanch_txt" />

            <EditText
                android:id="@+id/voter_id_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_semi_curved_grey"
                android:hint="@string/enter_mandal_name"
                android:inputType="text"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/greyTeal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/raise_your_issue" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_btn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="?bg_background"
        android:text="@string/submit"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raise_issues_card" />

</androidx.constraintlayout.widget.ConstraintLayout>